#!/usr/bin/env bash
# surrogate
# backup rotation/retention

function rotate_backups() {
  set -u

  find $backup_directory/daily -mindepth 2 -not -newermt "$daily_retention" | xargs rm -rf
  find $backup_directory/weekly -mindepth 1 -not -newermt "$weekly_retention" | xargs rm -rf
  find $backup_directory/monthly -mindepth 1 -not -newermt "$monthly_retention" | xargs rm -rf
}
